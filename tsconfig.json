{
  "compilerOptions": {
    "target": "es6",
    "isolatedModules": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    // "declaration": true,
    // "declarationDir": "./types",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    // https://preactjs.com/guide/v10/typescript/#typescript-configuration
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    // Can use jsxFactory here or in esbuild script // https://esbuild.github.io/content-types/#auto-import-for-jsx
    // "jsxFactory": "h",
    // "jsxFragmentFactory": "Fragment",
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts"
  ],
  // "types": [
  //   "unplugin-icons/types/preact",
  // ]
}